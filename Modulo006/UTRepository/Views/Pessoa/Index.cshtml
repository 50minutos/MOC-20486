@model IEnumerable<UTRepository.Models.Pessoa>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PessoaNome)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.PessoaNome)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.PessoaId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.PessoaId })
                </td>
            </tr>
        }

    </table>
</body>
</html>
