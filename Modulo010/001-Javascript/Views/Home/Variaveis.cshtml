@section script{
    <script type="text/javascript">
        var x = 10;

        document.writeln("<p>" + x + "</p>");

        function foo() {
            document.writeln("<p>" + x + "</p>");

            //var x = 1000;
            x = 1000;

            document.writeln("<p>" + x + "</p>");
        }

        foo();

        document.writeln("<p>" + x + "</p>");
    </script>
}